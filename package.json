{
  "name": "origin-storage",
  "version": "2.2.4",
  "description": "A same-origin storage(IndexedDB/WebSQL/localStorage) for cross-domain access",
  "main": "lib/index.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "build": "yarn clean && tsc --skipLibCheck && yarn build:prod && yarn build:dev",
    "build:prod": "NODE_ENV=production rollup --config --bundleConfigAsCjs",
    "build:dev": "NODE_ENV=development rollup --config --bundleConfigAsCjs",
    "commit": "yarn git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unadlib/origin-storage.git"
  },
  "author": "unadlib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unadlib/origin-storage/issues"
  },
  "homepage": "https://github.com/unadlib/origin-storage#readme",
  "keywords": [
    "cross-database",
    "indexeddb",
    "websql",
    "localstorage",
    "localforage"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/jest": "^29.5.0",
    "@types/localforage": "^0.0.34",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.6",
    "rimraf": "^4.4.0",
    "rollup": "^3.20.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.28",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^5.0.2",
    "yargs": "^17.7.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "globals": {
      "__DEV__": false
    }
  },
  "peerDependencies": {
    "broadcast-channel": "^5 || ^4",
    "data-transport": "^4.3.3",
    "localforage": "^1.10.0"
  },
  "dependencies": {
    "broadcast-channel": "^5.3.0",
    "data-transport": "^4.3.3",
    "localforage": "^1.10.0"
  }
}
